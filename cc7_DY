<body onload="otpnew()">
    <h1> Final Verification Step </h1>
    <h2> Current OTP: <span id="otp"> _ _ _ _ _ _ </span> <a onclick="otpnew()" href="#"> New OTP </a></h2>
    <button onclick="enterotp()"> Enter the OTP as shown above </button>

    <script>
        function otpnew() {
            var otp = "";
            var i = 0; 
            while (i < 6) {
                otp += Math.floor(Math.random() * 10); 
                i++;
            }
            document.getElementById("otp").textContent = otp; 
        }

        function enterotp() {
            var inputotp = prompt("Please enter the OTP:");
            var showedotp = document.getElementById("otp").textContent;
            
            if (inputotp === showedotp) {
                window.open("https://open.spotify.com/track/5CUQnKjA6nlteCnxMKsjIu");
            }
            else {
                alert("Your inputted OTP is incorrect. Please try again! :(");
            }
        }
    </script>
</body>
