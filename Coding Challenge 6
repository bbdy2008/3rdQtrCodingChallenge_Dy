    <h1>Quadratic Formula</h1>

    <input type="number" id="aInput" placeholder="Enter variable a">
    <input type="number" id="bInput" placeholder="Enter variable b">
    <input type="number" id="cInput" placeholder="Enter variable c">
    
    <button onclick="quadratic()">Find the root</button>

    <h3 id="result"></h3>

    <script>
        function quadratic(){
            var a = parseFloat(document.getElementById("aInput").value);
            var b = parseFloat(document.getElementById("bInput").value);
            var c = parseFloat(document.getElementById("cInput").value);
            
            var discriminant = b * b - 4 * a * c;
            
            if (discriminant === 0) {
                var root1 = -b / (2 * a);
                document.getElementById("result").innerHTML = "Both roots are equal. " + "<br>The Root is: " + root.toFixed(2);
            } 
            
            else if (discriminant > 0) {
                var root1 = (-b + Math.sqrt(discriminant)) / (2 * a);
                var root2 = (-b - Math.sqrt(discriminant)) / (2 * a);
                document.getElementById("result").innerHTML = "The roots are both real. " + "<br>Root 1: " + root1.toFixed(2) + "<br>Root 2: " + root2.toFixed(2);
            } 
            
            else {
                var root1 = -b / (2 * a);
                var root2 = Math.sqrt(-discriminant) / (2 * a);
                document.getElementById("result").innerHTML = "The roots are imaginary. " + "<br>Root 1: " + root1.toFixed(2) + " + " + root2.toFixed(2) + "i" + "<br>Root 2: " + root1.toFixed(2) + " - " + root2.toFixed(2) + "i";
            }
        }
    </script>
